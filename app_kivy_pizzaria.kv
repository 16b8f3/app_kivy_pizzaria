<Login>:
	email : email
	senha : senha
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20

        Image:
            source: "./imgs/pizzaLogo.png"
            size_hint_y: None
            height: 150

        GridLayout:
            cols: 2
            padding: 20

            Label:
                # id:
                text: "E-mail"
            TextInput:
                id: email
                font_size: 18
                multiline:False 
                write_tab: False 
            Label:
                # id:
                text: "Senha"
            TextInput:
                id: senha
                font_size: 18
                password: True
                multiline:False 
                write_tab: False 

        Button:
            text: 'Login'
            on_release: root.validar()
        Button:
            text: 'Cadastrar'
            on_release: app.root.current = 'cadastrar'
            on_press: root.limparCamposLogin()

<Cadastrar>:
	nome: nome
	sobrenome: sobrenome
	email: email
	senha: senha
    confirmarSenha: confirmarSenha

    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20

        Image:
            source: "./imgs/pizzaLogo.png"
            allow_stretch: False
            size_hint_y: None
            height: 100

        GridLayout:
            cols: 2
            padding: 20

            Label:
                # id:
                text: "Nome"
            TextInput:
                id: nome
                font_size: 18
                multiline:False 
                write_tab: False 
            Label:
                # id:
                text: "Sobrenome"
            TextInput:
                id: sobrenome
                font_size: 18
                multiline:False 
                write_tab: False 
            Label:
                # id:
                text: "Email"
            TextInput:
                id: email
                font_size: 18
                multiline:False 
                write_tab: False 
            Label:
                # id:
                text: "Senha"
            TextInput:
                id: senha
                font_size: 18
                multiline:False 
                write_tab: False 
                password: True
            Label:
                # id:
                text: "Confirmar senha"
            TextInput:
                id: confirmarSenha
                font_size: 18
                multiline:False 
                write_tab: False 
                password: True

        BoxLayout:
            orientation: 'vertical'
            padding: 20
            spacing: 20
            Button:
                text: 'Cadastrar'
                on_release: root.validar()
            Button:
                text: 'Voltar'
                on_release: app.root.current = 'login'
                on_press: root.limparCamposCadastro()

<Menu>:
    BoxLayout:
        orientation: 'vertical'
        padding: 40
        spacing: 40

        Image:
            source: "./imgs/pizzaLogo.png"
            size_hint_y: None
            height: 150

        Button:
            text: 'Fazer Pedido'
            on_release: app.root.current = 'pedido'
        Button:
            text: 'Sair'
            on_release: app.stop()

