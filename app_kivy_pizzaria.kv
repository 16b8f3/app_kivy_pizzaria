<Gerente_das_telas>:
    Login:
        name: 'login'

<Login>:
    BoxLayout:
        orientation: 'vertical'
        padding: 0
        spacing: 0

        Image:
            source: "./imgs/pizzaLogo.png"
            allow_stretch: False
            size_hint_y: None
            height: 150
        GridLayout:
            cols: 2
            spacing: 0
            Label:
                #id:
                text: "Usuario"
            TextInput:
                #id:
                font_size: 30
            Label:
                #id:
                text: "Senha"
            TextInput:
                #id:
                font_size: 30
        Button:
            text: 'Login'
            #on_release: app.root.current = 'menu'
        Button:
            text: 'Cadastrar'
            #on_release: app.root.current = 'cadastrar'

<Cadastrar>:
    BoxLayout:
        orientation: 'vertical'
        padding: 0
        spacing: 0

        Image:
            source: "./imgs/pizzaLogo.png"
            allow_stretch: False
            size_hint_y: None
            height: 150
        GridLayout:
            cols: 2
            spacing: 0
            Label:
                #id:
                text: "Usuario"
            TextInput:
                #id:
                font_size: 30
            Label:
                #id:
                text: "Email"
            TextInput:
                #id:
                font_size: 30
            Label:
                #id:
                text: "Senha"
            TextInput:
                #id:
                font_size: 30
        Button:
            text: 'Cadastrar'

<Menu>:
    BoxLayout:
        orientation: 'vertical'
        padding: 0
        spacing: 0

        Image:
            source: "./imgs/pizzaLogo.png"
            allow_stretch: False
            size_hint_y: None
            height: 150
        Button:
            text: 'Fazer Pedido'
            #on_release: app.root.current = 'pedido'
        Button:
            text: 'Sair'
            #on_release: app.stop()

<Pedido>:
    BoxLayout:
        orientation: 'vertical'
        padding: 0
        spacing: 0

        ScrollView:
            BoxLayout:
                orientation:'vertical'
                size_hint_y: None
                height:self.minimum_height
                BoxLayout:
                    orientation:'vertical'
                    size_hint_y: None
                    height: 350
                    spacing: 25
                    Image:
                        source: "./imgs/pizzaLogo.png"
                        allow_stretch: False
                        size_hint_y: None
                        height: 150
                    Label:
                        #id:
                        text: "Nome pizza - tamanho"
                    Label:
                        #id:
                        text: "Ingredientes"
                    Label:
                        #id:
                        text: "Preço R$ 47.99"
                    GridLayout:
                        cols: 2
                        spacing:0

                        Label:
                            #id:
                            text: "Quantidade:"
                        Label:
                            #id:
                            text: "0"
                    GridLayout:
                        cols: 2
                        spacing: 0

                        Button:
                            text: '+'
                        Button:
                            text: '-'

        GridLayout:
            cols: 2
            spacing:0

            Label:
                #id:
                text: "Total R$"
            Label:
                #id:
                text: "0.00"
            Button:
                text: 'Menu'
                #on_release: app.root.current = 'menu'
            Button:
                text: 'Finalizar pedido'
                #on_release: app.root.current = 'finalizar_pedido'

<Finalizar_Pedido>:
    BoxLayout:
        orientation: 'vertical'
        padding: 0
        spacing: 0

        GridLayout:
            cols: 2
            spacing:0

            Label:
                #id:
                text: "Endereço: "
            TextInput:
                #id:
                font_size: 30
            Label:
                #id:
                text: "Telefone: "
            TextInput:
                #id:
                font_size: 30
            Label:
                #id:
                text: "Forma de pagamento: "
            TextInput:
                #id:
                font_size: 30
            Button:
                text: 'Menu'
                #on_release: app.root.current = 'menu'
            Button:
                text: 'Pedido'
                #on_release: app.root.current = 'pedido'

        Button:
            text: 'Finalizar Pedido'
            #on_release: app.root.current = ''