<Finalizar_Pedido>:
    BoxLayout:
        orientation: 'vertical'
        padding: 0
        spacing: 0

        GridLayout:
            cols: 2
            spacing:0

            Label:
                # id:
                text: "Endereço: "
            TextInput:
                id: enderecoParaEntregaDoPedido
                font_size: 30
            Label:
                # id:
                text: "Telefone: "
            TextInput:
                id: telefoneParaContato
                font_size: 30
                input_filter:'int' # Só pode digitar numeros inteiros

        BoxLayout:
            orientation:'vertical'
            size_hint_y: None
            height: 150
            padding: 0
            spacing: 0
            Spinner:
                id: forma_de_pagamento
                text: "Selecione a forma de pagamento"
                values: ["Cartão de Credito", "Cartão de Debito","Pix"]
                on_text: root.spinner_Clicado(self.text)
        
        BoxLayout:
            orientation:'vertical'
            size_hint_y: None
            height: 150
            padding: 0
            spacing: 0        
            GridLayout:
                cols: 2
                spacing:0        
                Button:
                    text: 'Menu'
                    on_release: app.root.current = 'menu'
                Button:
                    text: 'Pedido'
                    on_release: app.root.current = 'pedido'

        Button:
            text: 'Finalizar Pedido'
            on_release: app.root.current = ''