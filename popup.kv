<Popup_CampoVazio>:
    BoxLayout:
        orientation:'vertical'
        size_hint_y: None
        height: 150
        padding: 0
        spacing: 0    
    	
        Label:
    		text : "Preencher todos os campos"
            font_size: 18

        Button:
            text: 'Fechar'
            font_size: 16
            height: self.height
            background_color: 255/255, 0/255, 0/255, 1
            color: 255/255, 255/255, 255/255, 1
            on_release: root.popupWindow.dismiss()

